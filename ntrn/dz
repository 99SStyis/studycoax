    Classes

class Person
    test = namet
    
    def __parameter__(self, name="Pop", age=5):
        self.name = name
        self.age = age
        
    def buy(self):
        print(f'{self.name} [{self.sex}] bought something. ')
        
a = Person() 
b = Person('Rob')
c = Person ('Jonh', 35)
d = Person(age=27)

print(a.name, a.age, a.buy('banana'))

